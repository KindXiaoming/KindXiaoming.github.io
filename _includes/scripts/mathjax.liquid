{% if site.enable_math %}
  {% unless page.pseudocode %}
    <!-- MathJax Script -->
    <script
      type="text/javascript"
      id="MathJax-script"
      src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"
      crossorigin="anonymous"
    ></script>
    <script>
      // Debug: Check if MathJax loaded
      window.addEventListener('load', function() {
        console.log('Page loaded. MathJax available:', typeof window.MathJax !== 'undefined');
        if (typeof window.MathJax !== 'undefined') {
          console.log('MathJax version:', window.MathJax.version);
        } else {
          console.error('MathJax failed to load!');
        }
      });
    </script>
  {% endunless %}
{% endif %}
